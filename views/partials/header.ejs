<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jubilee Asset Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #C02033;
        }
        .bg-primary {
            background-color: var(--primary-color) !important;
        }
        .text-primary {
            color: var(--primary-color) !important;
        }
        .btn-primary {
            background-color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }
        .nav-link.active {
            background-color: var(--primary-color);
            color: white !important;
        }
        .status-badge {
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
        }
        .company-card {
            transition: transform 0.2s;
            cursor: pointer;
        }
        .company-card:hover {
            transform: translateY(-5px);
        }
        .asset-type-card {
            border-left: 4px solid var(--primary-color);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Jubilee AMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= typeof activeTab !== 'undefined' && activeTab === 'dashboard' ? 'active' : '' %>" href="/">Dashboard</a>
                    </li>
                    <% if (user && user.role === 'admin') { %>
                        <li class="nav-item">
                            <a class="nav-link <%= typeof activeTab !== 'undefined' && activeTab === 'asset-types' ? 'active' : '' %>" href="/asset-types">Asset Types</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= typeof activeTab !== 'undefined' && activeTab === 'users' ? 'active' : '' %>" href="/users">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= typeof activeTab !== 'undefined' && activeTab === 'reports' ? 'active' : '' %>" href="/reports">Reports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= typeof activeTab !== 'undefined' && activeTab === 'upload-excel' ? 'active' : '' %>" href="/upload-excel">Upload Excel</a>
                        </li>
                    <% } %>
                </ul>
                <% if (user) { %>
                    <div class="navbar-nav">
                        <span class="nav-item nav-link text-light">
                            <i class="fas fa-user me-2"></i><%= user.fullName %>
                        </span>
                        <a class="nav-link" href="/logout">Logout</a>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>
</body>
</html>